{
  "compilerOptions": {
    "target": "ES2022",                       
    "module": "CommonJS",                     
    "moduleResolution": "node",             
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,                  
    "resolveJsonModule": true,                
    "sourceMap": true,                    
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}